<project name="vavi-commons" default="compile" basedir="."
         xmlns:ivy="antlib:org.apache.ivy.ant">

  <property file="local.properties" />

  <property name="dir.build" value="target/classes" />
  <property name="lib.dir" value="lib" />

  <!-- クラスパスの定義 -->
  <path id="project.class.path">
    <fileset dir="${lib.dir}">
      <include name="*.jar" />
    </fileset>
  </path>

  <!-- clean -->
  <target name="clean" description="ビルド環境のクリア">
    <delete>
      <fileset dir="${dir.build}">
        <include name="**/*" />
      </fileset>
      <fileset dir="target/test-classes">
        <include name="**/*" />
      </fileset>
    </delete>
  </target>

  <!-- prepare -->
  <target name="prepare" description="ビルド環境の準備">
    <ivy:settings file="ivy-settings.xml" />
    <ivy:convertpom pomFile="pom.xml" ivyFile="ivy.xml" />
    <ivy:retrieve />
  </target>

  <!-- javac all vavi -->
  <target name="compile" depends="prepare" description="コンパイル">
    <javac debug="on" target="1.5" encoding="MS932" destdir="${dir.build}">
      <classpath refid="project.class.path" />
      <src path="src/main/java" />
    </javac>

    <copy todir="${dir.build}">
      <fileset dir="src/main/resources">
        <include name="**/*" />
      </fileset>
    </copy>

    <javac debug="on" target="1.5" encoding="MS932" destdir="target/test-classes">
      <classpath>
        <path refid="project.class.path" />
        <pathelement location="${dir.build}" />
      </classpath>
      <include name="**/*.java" />
      <src path="src/test/java" />
    </javac>

    <copy todir="target/test-classes">
      <fileset dir="src/test/resources">
        <include name="**/*" />
      </fileset>
    </copy>
  </target>

  <!-- jar -->
  <target name="packaging" depends="compile" description="パッケージング">
    <jar jarfile="target/vavi-commons.jar">
      <fileset dir="${dir.build}">
        <include name="**/*" />
      </fileset>
    </jar>
  </target>

  <!-- javadoc TODO use css -->
  <target name="javadoc" description="ドキュメントの生成">
    <javadoc 
      encoding="Shift_JIS"
      packagenames="vavi/awt,
                    vavi/awt/containereditor,
                  vavi/awt/containereditor/basic,
                  vavi/awt/dnd,
                  vavi/awt/event,
                  vavi/awt/image,
                  vavi/awt/rubberband,
                  vavi/io,
                  vavi/net/www/content/image,
                  vavi/sound,
                  vavi/sound/adpcm/,
                  vavi/sound/adpcm/ccitt,
                  vavi/sound/adpcm/dvi,
                  vavi/sound/adpcm/ima,
                  vavi/sound/adpcm/ms,
                  vavi/sound/adpcm/oki,
                  vavi/sound/adpcm/vox,
                  vavi/sound/adpcm/yamaha,
                  vavi/sound/mfi,
                  vavi/sound/mfi/spi,
                  vavi/sound/mfi/vavi,
                  vavi/sound/mfi/vavi/info,
                  vavi/sound/mfi/vavi/mitsubishi,
                  vavi/sound/mfi/vavi/nec,
                  vavi/sound/mfi/vavi/sysex,
                  vavi/sound/mfi/vavi/system,
                  vavi/sound//midi/mfi,
                  vavi/swing,
                  vavi/swing/beaninfo,
                  vavi/swing/border,
                  vavi/swing/colorchooser,
                  vavi/swing/containertree,
                  vavix/swing/editormanager,
                  vavi/swing/event,
                  vavi/swing/fontchooser,
                  vavi/swing/layout,
                  vavi/swing/propertyeditor,
                  vavi/text,
                  vavi/tools/parser,
                  vavi/util,
                  vavi/util/gnu,
                  vavi/util/logging,
                  vavi/util/sort,
                  vavi/util/win32,
                  vavi/util/win32/registry"
      sourcepath="."
      destdir="docs/vavi"
      author="true"
      version="true"
      use="true"
      private="false"
      windowtitle="Vavi OE 0.1"
      overview="./overview.html">
      <link href="file:///c|/usr/local/java/docs/ja/api/"/>
      <classpath refid="project.class.path" />
    </javadoc>
  </target>

  <!-- genkey -->
  <target name="genkey" description="暗号鍵を生成">
    <genkey alias="VaviRoot" storepass="${jks.password}" keystore="etc/.keystore">
      <dname>
        <param name="CN" value="Vavi JavaCA"/>
        <param name="OU" value="Java Division"/>
        <param name="O"  value="Vavi.com"/>
        <param name="L"  value="Amagasaki"/>
        <param name="ST" value="Hyogo"/>
        <param name="C"  value="JP"/>
      </dname>
    </genkey>
  </target>

  <!-- -->
  <target name="check.key.1" description="list .keystore">
    <exec executable="keytool">
      <arg value="-J-Dfile.encofing=UTF-8" />
      <arg value="-list" />
      <arg value="-storepass" />
      <arg value="${jks.password}" />
      <arg value="-keystore" />
      <arg value="etc/.keystore" />
    </exec>
  </target>
   
  <!-- -->
  <target name="check.key.2" description="list VaviRoot verbose">
    <exec executable="keytool">
      <arg value="-list" />
      <arg value="-storepass" />
      <arg value="${jks.password}" />
      <arg value="-v" />
      <arg value="-alias" />
      <arg value="VaviRoot" />
      <arg value="-keystore" />
      <arg value="etc/.keystore" />
    </exec>
  </target>
   
  <!-- -->
  <target name="expkey" description="export key as .cer file">
    <exec executable="keytool">
      <arg value="-export" />
      <arg value="-storepass" />
      <arg value="${jks.password}" />
      <arg value="-alias" />
      <arg value="VaviRoot" />
      <arg value="-keystore" />
      <arg value="etc/.keystore" />
      <arg value="-file" />
      <arg value="vaviroot.cer" />
    </exec>
  </target>

</project>

